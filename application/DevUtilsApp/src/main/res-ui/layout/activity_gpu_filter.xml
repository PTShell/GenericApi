<?xml version="1.0" encoding="utf-8"?>
<dev.widget.custom.CustomNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        style="@style/AppTheme.padding_lr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dev.base.widget.BaseButton
            android:id="@+id/vid_select_btn"
            style="@style/AppTheme.Base_Button"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="选择图片" />

        <dev.widget.custom.CustomGallery
            android:id="@+id/vid_gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70" />

        <dev.base.widget.BaseImageView
            android:id="@+id/vid_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20" />
    </LinearLayout>
</dev.widget.custom.CustomNestedScrollView>