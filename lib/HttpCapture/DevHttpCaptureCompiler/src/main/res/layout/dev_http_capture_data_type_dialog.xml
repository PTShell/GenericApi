            android:id="@+id/vid_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/dev_http_capture_dialog_cancel_padding_left"
            android:paddingTop="@dimen/dev_http_capture_dialog_cancel_padding_top"
            android:paddingRight="@dimen/dev_http_capture_dialog_cancel_padding_right"
            android:paddingBottom="@dimen/dev_http_capture_dialog_cancel_padding_bottom"
            android:text="@string/dev_http_capture_cancel"
            android:textColor="@color/dev_http_capture_dialog_cancel_text_color"
            android:textSize="@dimen/dev_http_capture_dialog_cancel_text_size" />
    </LinearLayout>
